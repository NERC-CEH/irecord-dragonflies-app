<div data-role="header" data-position="fixed" data-tap-toggle="false">
    <div class='ui-btn-left' data-role='controlgroup' data-type='horizontal'>
        <a href='#' data-rel="back" data-role="button"
           data-icon="delete">Cancel</a>
    </div>
    <h1>Number</h1>
</div>
<div data-role="content">
    <div class="info-message">
        <p>How many individuals of this type?</p>
    </div>
    <fieldset data-role="controlgroup" data-iconpos="right">
        <input type="radio" name="number" id="radio-choice-1" value="1">
        <label for="radio-choice-1">1</label>
        <input type="radio" name="number" id="radio-choice-2" value="2-5">
        <label for="radio-choice-2">2-5</label>
        <input type="radio" name="number" id="radio-choice-3" value="6-20">
        <label for="radio-choice-3">6-20</label>
        <input type="radio" name="number" id="radio-choice-4" value="21-100">
        <label for="radio-choice-4">21-100</label>
        <input type="radio" name="number" id="radio-choice-5" value="101-500">
        <label for="radio-choice-5">101-500</label>
        <input type="radio" name="number" id="radio-choice-6" value="500+">
        <label for="radio-choice-6">500+</label>
        <input type="radio" name="number" id="radio-choice-0" value="present" checked>
        <label for="radio-choice-0">Present</label>
    </fieldset>
</div>
